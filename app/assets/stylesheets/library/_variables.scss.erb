// COLORS

$primary-color: #66B247;
$dark-green: #487C31;
$dark: #1D1D1D;
$gray: #969696;
$red: #AA313A;
$dark-red: #981F2C;
.red {color: $red !important;}
.dark {color: $dark;}
.dark-red {color: $dark-red;}
.primary-color {color: $primary-color;}
.primary-bg {
  background-color: $primary-color;
  color: white !important;

  a, p {
    color: white;
  }
}
.tertiary-color {color: $dark-green;}
.tertiary-bg {
  background-color: $dark-green !important;
  color: white !important;

  a, p {
    color: white;
  }
}

$secondary-color: #1F9EF9;

.secondary-color {color: $secondary-color;}
.secondary-bg {
  background-color: $secondary-color;

  color: white !important;

  a, p {
    color: white;
  }
}

$gold: #ffae00;
.white {
  color: white!important;
}
